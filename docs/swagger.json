{
  "openapi": "3.0.1",
  "info": {
    "title": "Core API",
    "description": "The worlds funnest little API",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:3000/"
    }
  ],
  "paths": {
    "/categories": {
      "get": {
        "description": "Get all categories",
        "responses": {
          "200": {
            "description": "Returned a list of categories",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/getAll"
                }
              }
            }
          }
        }
      },
      "post": {
        "description": "Create a Category",
        "parameters": [
          {"name": "id",
           "in": "body"
          },
          {
            "name": "name",
            "in": "query",
            "schema":
              { 
                "$ref": "#/components/schemas/needString"
              }
          },
          {
            "name": "display name",
            "in": "query",
            "schema":
              { 
                "$ref": "#/components/schemas/needString"
              }         
            },
          {
            "name": "description",
            "in": "query",
            "schema":
              { 
                "$ref": "#/components/schemas/needString"
              }
          }
          ],
        "responses": {
          "200": {
            "description": "Returned the created catagory",
            "content":{
              "*/*":{
                "schema": {
                  "$ref": "#/components/schemas/postCat"
                }
              }
            }
          }
        }
      }
    },
    "/categories/{id}": {
      "get": {
        "description": "Get desired category",
        "responses": {
          "200": {
            "description": "Returned a single category",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/getAll"
                }
              }
            }
          }
        }
      },
      "put": {
      },
      "delete": {
      }
    }
  },
  "components": {
    "schemas": {
      "needString":{
        "type": "string",
        "required": true
      },
      "postCat": {
        "type": "object",
        "example": [
          
            "{}"
          ]
      },
      "getAll": {
        "type": "object",
        "example": [
          "{}",
          "{}"
        ]
      }
    }
  }
}
